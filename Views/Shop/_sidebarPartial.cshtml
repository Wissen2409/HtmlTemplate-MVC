@model ShopIndexVM

<div class="col-lg-3 col-md-4">
    <!-- Filter Start -->
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Select
            Category</span>
    </h5>
    <div class="bg-light p-4 mb-30">
        <form id="dropdownFilterForm" action="/Shop/Index" method="post">
            @Html.DropDownListFor(s => s.SelCategoryId, new SelectList(Model.Categories, "ProductCategoryId", "Name"),
                     "Select a Category", new { @name = "Filters.SelCategoryId", @class = "auto-submit" })
            @if (Model.SelCategoryId != 0)
            {
                @Html.DropDownListFor(s => s.SelSubCategoryId, new SelectList(Model.SubCategories, "ProductSubCategoryId",
                         "Name"), "Select a Sub Category", new { @name = "Filters.SelSubCategoryId", @class = "auto-submit" })
            }

            <!-- Fiyat Aralığı -->
        <div class="form-group">
            <label for="minPrice">Min Price</label>
            <input type="number" id="minPrice" name="MinPrice" value="@Model.MinPrice" class="form-control" />
        </div>
        <div class="form-group">
            <label for="maxPrice">Max Price</label>
            <input type="number" id="maxPrice" name="MaxPrice" value="@Model.MaxPrice" class="form-control" />
        </div>

        <!-- Renk Seçimi -->
        <div class="form-group">
            <h5>Colors</h5>
            @foreach (var color in Model.Colors ?? new List<string>())
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="Colors" value="@color" id="color-@color" />
                    <label class="form-check-label" for="color-@color">@color</label>
                </div>
            }
        </div>

        <!-- Filtre Uygula Butonu -->
        <button type="submit" class="btn btn-primary">Apply Filters</button>
            
        </form>

  
</div>
    
</div>
