@model ShopIndexVM
<div class="col-12">
    <form id="fakeForm" action="/Shop/Index" method="post">
        <input type="hidden" asp-for="CurrentPage">
        <input type="hidden" asp-for="SelCategoryId">
        <input type="hidden" asp-for="SelSubCategoryId">
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <button class="page-link" type="submit"
                        onclick="document.querySelector('#fakeForm').elements['CurrentPage'].value = @Model.CurrentPage -1">Previous</button>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <button class="page-link" type="submit"
                            onclick="document.querySelector('#fakeForm').elements['CurrentPage'].value = @i">@i</button>
                    </li>

                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <button class="page-link" type="submit"
                        onclick="document.querySelector('#fakeForm').elements['CurrentPage'].value = @Model.CurrentPage +1">Next</button>
                </li>
            </ul>
        </nav>
    </form>
</div>