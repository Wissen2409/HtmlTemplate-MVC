@model ShopIndexVM

<!-- Breadcrumb Start -->
<partial name="_breadcrumbPartial" />
<!-- Breadcrumb End -->


<!-- Shop Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <partial name="_sidebarPartial" model="Model" />
        <!-- Shop Sidebar End -->


        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">

                <!-- View Switcher Start -->
                <partial name="_viewSwitcherPartial" />
                <!-- View Switcher End -->

                <!-- Product Cards Start-->
                @if (Model.Products.Count == 0 || Model.Products == null)
                {
                    <div class="col-lg-12">
                        <div class="alert alert-warning" role="alert">
                            <h4 class="alert-heading">No Product Found!</h4>
                            <p>There is no product in this category.</p>
                        </div>
                    </div>
                }
                else
                {
                    @foreach (var item in Model.Products)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
                            <div class="product-item bg-light mb-4">
                                <div class="product-img position-relative overflow-hidden">
                                    <img class="img-fluid w-100" src="@item.LargePhoto" alt="">
                                    <div class="product-action">
                                        <a class="btn btn-outline-dark btn-square" href=""><i
                                                class="fa fa-shopping-cart"></i></a>
                                        <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                                        <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                                        <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="text-center py-4">
                                    <a class="h6 text-decoration-none text-truncate"
                                        href="/Home/ProductDetail?productId=@item.ProductId">@item.Name</a>
                                    <div class="d-flex align-items-center justify-content-center mt-2">
                                        <h5>$@item.StandardCost</h5>
                                        <h6 class="text-muted ml-2"><del>$@item.ListPrice</del></h6>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center mb-1">
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small>(99)</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }}
                <!-- Product Cards End-->
                <partial name="_pageNavPartial">
            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->