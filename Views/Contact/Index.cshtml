@model ContactVM

<partial name="_breadCrumbPartial" />



    <!-- Contact Start -->
    <div class="container-fluid">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Contact Us</span></h2>
        <div class="row px-xl-5">
            <div class="col-lg-7 mb-5">
                <div class="contact-form bg-light p-30">
                    <div id="success"></div>
                    <form name="sentMessage" id="contactForm" novalidate="novalidate" action="/Contact/Index" method="post">
                        <div class="control-group">
                            @Html.TextBoxFor(s => s.Name, new { @class = "form-control", @placeholder = "Your Name", id= "name",@required = true })
                             
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="flex-1 text-right text-red-500">
            @Html.ValidationMessageFor(s => s.Name)
        </div>
                        <div class="control-group">
                            @Html.TextBoxFor(s => s.Email, new { @class = "form-control", placeholder = "Your Email", id= "email", @required = true })
                            
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="flex-1 text-right text-red-500">
            @Html.ValidationMessageFor(s => s.Email)
        </div>
                        <div class="control-group">
                            @Html.TextBoxFor(s => s.Subject, new { @class = "form-control", placeholder = "Subject", id= "subject",@required=true})
                            
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="flex-1 text-right text-red-500">
            @Html.ValidationMessageFor(s => s.Subject)
        </div>
                        <div class="control-group">
                            @Html.TextAreaFor(s => s.Message, new { @class = "form-control", style = " rows=8", placeholder="Message", @required = true })
                            
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="flex-1 text-right text-red-500">
            @Html.ValidationMessageFor(s => s.Message)
        </div>
                        <div>
                            <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">Send
                                Message</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-5 mb-5">
                <div class="bg-light p-30 mb-30">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3009.153461886945!2d29.009756476529994!3d41.04377301723789!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab7bcc160b097%3A0x2a722cd1f6529b6a!2sBAU%20Global%20Online%20-%20BAUGO!5e0!3m2!1str!2str!4v1734873838806!5m2!1str!2str" width="100%" height="250px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
                <div class="bg-light p-30 mb-3">
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>Yıldız Mahallesi, Asariye Cd. No:3, 34349
Beşiktaş/İstanbul</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>baugo@bau.edu.tr</p>
                    <p class="mb-2"><i class="fa fa-phone-alt text-primary mr-3"></i>+90212 3819381</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->




